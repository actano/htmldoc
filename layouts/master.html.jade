include partials/dynamic_navigation.html.jade
- var scripts = getBlock("scripts") //- JS für Live-Reload und weitere Plugins
- var styles = getBlock("styles") //- CSS für Plugins
- styles.add(["/adminpage.css","/htmldoc/layout.css"])
doctype
html
    head
        meta(charset='utf-8')
        - title = document.url.substr(0, document.url.lastIndexOf("/")).split("/").pop()
        title=(document.title  ? document.title : title) + " | RPLAN - Developer Documentation"
        != styles.toHTML()


    body
        .threecolumn
            .content
                .firstLevelContent
                    h2 Topics
                    +navigation(generateMenu(document.url, "features"), 1, 1, 2)
                .secondLevelContent
                    h2=title
                    +navigation(generateMenu(document.url, "features"), 1, 3, 3)

                    div(class=document.contenttype)
                        !=content
        include partials/footer.html.jade
    != scripts.toHTML()