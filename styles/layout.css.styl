.threecolumn .content
    width: 100%
    display flex
    .firstLevelContent, .secondLevelContent
        flex-grow 1
        flex-shrink 1
        flex-wrap nowrap
    .firstLevelContent
        max-width: 25%
        padding: 0 0.5em
        > ul
            height: calc(100% - 7em)
        ul
            list-style: none
            padding: 0
            margin: 0 0 0 2em
            overflow: auto
            li
                margin: 0.5em 0 0 0
                display:  none
                &.page--parent, &.page--parent > ul > li
                    display: block
                &.page--current
                    font-weight: bold
                a
                    color: #000000
                    text-decoration none

    .secondLevelContent
        max-width: 75%
        ul.pagenavigation
            display: flex
            list-style: none
            padding: 0
            margin: 0
            max-width 80%
            li
                flex-grow: 1
                background: rgb(179,179,179)
                padding: 0
                border-left: 1px solid #fff
                a
                    display: block
                    padding: 0.5em
                    text-align: center
                    color: #fff
                    text-decoration none
                    
                &.selected a, &:hover a
                    background: #1a76d5
        .commitlog
            > ul
                list-style: none
                padding: 0
                > li
                    border-bottom: 1px solid lightgray
                    padding: 0 0 1em 0
